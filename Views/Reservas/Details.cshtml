@model SistemaReservas.Models.Reservas

@{
    ViewData["Title"] = "Details";
    Layout = "_AdminLayout";
}

<div class="AdminContainer">
<h1>Reservation details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Reservation made
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReservaRealizada)
        </dd>
        <dt class = "col-sm-2">
            Reserved day
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiaReservado)
        </dd>
        <dt class = "col-sm-2">
            Amount
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Monto)
        </dd>
        <dt class = "col-sm-2">
            User
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Nombre)
        </dd>
    </dl>
</div>
<div>
    <a class="btnEdit" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a class="btnBack" asp-action="Index">Back to List</a>
</div>
</div>