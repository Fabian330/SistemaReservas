@model SistemaReservas.Models.Reservas

@{
    ViewData["Title"] = "Delete";
    Layout = "_AdminLayout";
}

<div class="AdminContainer">
<h1>Delete reservation</h1>

<h3>Are you sure you want to delete this reservation?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Reservation made
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReservaRealizada)
        </dd>
        <dt class = "col-sm-2">
            Reserved day
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiaReservado)
        </dd>
        <dt class = "col-sm-2">
            Amount
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Monto)
        </dd>
        <dt class = "col-sm-2">
            User
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Nombre)
        </dd>
    </dl>
    
    <form class="formDelete" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btnDelete" /> |
        <a class="btnBack" asp-action="Index">Back to List</a>
    </form>
</div>
</div>